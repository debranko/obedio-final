# MQTT Broker Configuration
MQTT_BROKER=mqtt://localhost:1883
MQTT_USERNAME=admin
MQTT_PASSWORD=admin
MQTT_CLIENT_ID_PREFIX=sim
MQTT_KEEP_ALIVE=60
MQTT_RECONNECT_PERIOD=1000
MQTT_CONNECT_TIMEOUT=30000

# Database Configuration
DATABASE_URL=postgresql://postgres:password@localhost:5432/obedio
PRISMA_DATABASE_URL=postgresql://postgres:password@localhost:5432/obedio

# Logging Configuration
LOG_LEVEL=info
LOG_DIR=logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=5

# Device Simulation Configuration
DEFAULT_SITE_ID=hotel-alpha
DEFAULT_BATTERY_LEVEL=85
DEFAULT_SIGNAL_STRENGTH=95
DEVICE_STATUS_INTERVAL=30000
BATTERY_DRAIN_ENABLED=true
SIGNAL_FLUCTUATION_ENABLED=true

# Performance and Metrics
METRICS_ENABLED=true
METRICS_INTERVAL=5000
METRICS_RETENTION=3600000
METRICS_EXPORT_INTERVAL=60000
METRICS_EXPORT_PATH=logs/metrics

# Load Testing Configuration
DEFAULT_LOAD_DURATION=300000
DEFAULT_RAMP_UP_TIME=60000
DEFAULT_MESSAGE_RATE=10
MAX_CONCURRENT_DEVICES=500

# Alert Thresholds
CPU_WARNING_THRESHOLD=70
CPU_CRITICAL_THRESHOLD=90
MEMORY_WARNING_THRESHOLD=80
MEMORY_CRITICAL_THRESHOLD=95
NETWORK_CONNECTIONS_WARNING=1000
NETWORK_CONNECTIONS_CRITICAL=2000
MQTT_ERRORS_WARNING=10
MQTT_ERRORS_CRITICAL=50
DEVICE_ERRORS_WARNING=5
DEVICE_ERRORS_CRITICAL=20

# Development Settings
NODE_ENV=development
DEBUG=obedio:*

# Docker Configuration
COMPOSE_PROJECT_NAME=obedio-simulators
COMPOSE_HTTP_TIMEOUT=120