# OBEDIO IoT Server Configuration

# Server settings
PORT=3000
HOST=localhost

# MQTT Broker settings
MQTT_BROKER_URL=mqtt://localhost
MQTT_USERNAME=
MQTT_PASSWORD=
MQTT_CLIENT_ID=obedio_server
MQTT_TOPIC_PREFIX=obedio

# Data storage
DATA_PATH=./data
MAX_MESSAGES_PER_DEVICE=50
MAX_GLOBAL_MESSAGES=1000
OFFLINE_TIMEOUT_MINUTES=5  # Minutes after which a device is considered offline
STATUS_CHECK_INTERVAL=60000  # Interval in ms to check device status (default: 1 minute)
DEFAULT_MESSAGE_LIMIT=100  # Default limit for message lists in API and UI
OFFLINE_TIMEOUT_MINUTES=5  # Minutes after which a device is considered offline

# Logging
LOG_LEVEL=info  # debug, info, warn, error

# API Security
API_KEY=  # Set a strong random string for API authentication
ENABLE_API_AUTH=false  # Set to true to require API_KEY for API calls

# UI Customization
COMPANY_NAME=OBEDIO
REFRESH_INTERVAL=5000  # Dashboard refresh interval in ms

# Application Information
VERSION=1.0.0  # Server version number